<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
 
    <class name="com.kk.entity.Actor" dynamic-insert="false">
        <id name="id" type="int" >
             <generator class="increment"/>
        </id>
        <property name="actorName" type="string" length="20"  unique="true" />
        <property name="addrs"  type="string" length="20"/>
        <property name="phone"  type="long"  unique="true"/>
        <property name="remuneration"  type="float"/>
    </class> 
</hibernate-mapping>
